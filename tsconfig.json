{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": [
      "ESNext",
    ],
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    // "noUnusedLocals": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./src/**/__mocks__"
  ]
}